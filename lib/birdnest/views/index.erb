<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full">
          <thead class="border-b">
            <tr>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                #
              </th>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                Name
              </th>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                Email
              </th>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                Phone
              </th>
              <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                Distance
              </th>
            </tr>
          </thead>
          <tbody>
          <% pilots.each_with_index do |pilot, i| %>
            <tr class="border-b">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= i %></td>
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= pilot[:last_name] %> <%= pilot[:first_name] %></td>
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= pilot[:email] %></td>
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= pilot[:phone] %></td>
              <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap"><%= "%.2f" % pilot[:distance] %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
